      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:username]) %>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:position]) %>
  </div>
  <div class="control-group">
    <%= f.label :adminstrator, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :adminstrator, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:adminstrator]) %>
  </div>
  
    <br>

  
<%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>
