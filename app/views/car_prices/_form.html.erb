<%= form_for @car_price, :html => { :class => "form-horizontal car_price" } do |f| %>

    <% if @car_price.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@car_price.errors.count, "error") %> prohibited this car_price from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @car_price.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :agent_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:agent_id, @agents.map {|a| [a.name, a.id] } ,:class => 'form-control') %>
    </div>
    <%= error_span(@car_price[:agent_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :car_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:car_id, @cars.map{|c| [c.name,c.id]} , :class => 'form-control') %>
    </div>
    <%= error_span(@car_price[:car_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%= error_span(@car_price[:price]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            car_prices_path, :class => 'btn btn-default' %>

<% end %>
